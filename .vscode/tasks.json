{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Create terminals",
			"dependsOn": ["main", "shell"],
			// Mark as the default build task so cmd/ctrl+shift+b will create them
			"group": {
				"kind": "build",
				"isDefault": true
			},
			// Try start the task on folder open
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "main",
			"dependsOn": ["app", "db"],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			// The name that shows up in terminal tab
			"label": "app",
			"type": "shell",
			"command": "npm run dev",
			"icon": {
				"id": "folder",
				"color": "terminal.ansiGreen"
			},
			// Set the shell type
			"options": {
				"cwd": "${workspaceFolder}/",
				"shell": {
					"executable": "",
					"args": []
				}
			},
			// Mark as a background task to avoid the spinner animation on the terminal tab
			"isBackground": true,
			"problemMatcher": [],
			// Create the tasks in a terminal group
			"presentation": {
				"group": "main"
			}
		},
		{
			"label": "db",
			"type": "shell",
			"command": "sudo mongod",
			"icon": {
				"id": "terminal-powershell",
				"color": "terminal.ansiCyan"
			},
			"options": {
				"cwd": "${workspaceFolder}",
				"shell": {
					"executable": "",
					"args": []
				}
			},
			"isBackground": true,
			"problemMatcher": [],
			// Create the tasks in a terminal group
			"presentation": {
				"group": "main"
			}
		},
		{
			"label": "shell",
			"type": "shell",
			"command": "bash",
			"icon": {
				"id": "terminal-powershell",
				"color": "terminal.ansiBlue"
			},
			"options": {
				"cwd": "${workspaceFolder}",
				"shell": {
					"executable": "",
					"args": []
				}
			},
			"isBackground": false,
			"problemMatcher": []
		}
	]
}